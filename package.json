{
  "name": "prism",
  "version": "0.1.0",
  "description": "Personal intelligence engine for sales professionals",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node src/server.js",
    "client": "cd src/ui && npm run dev",
    "db:init": "node src/db/init.js",
    "watch": "node src/ingestion/watcher.js",
    "build": "cd src/ui && npm run build",
    "build:ui": "cd src/ui && npm run build",
    "electron:dev": "concurrently \"npm run server\" \"cd src/ui && npm run dev\" \"wait-on http://localhost:3001/api/health && electron .\"",
    "electron:build": "npm run build:ui && electron-builder",
    "start": "electron .",
    "postinstall": "electron-rebuild || true",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "multer": "^2.0.2",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "@electron/rebuild": "^4.0.2",
    "sharp": "^0.33.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.prism.app",
    "productName": "Prism",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "package.json",
      "!src/ui/src/**/*",
      "!src/ui/node_modules/**/*",
      "src/ui/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.png",
      "category": "public.app-category.business"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    },
    "npmRebuild": true
  }
}
